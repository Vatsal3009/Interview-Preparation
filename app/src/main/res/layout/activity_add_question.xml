<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddQuestion">

    <ScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">




        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleresep"
            android:fontFamily="@font/last"
            android:text="Add Question"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:background="#CCCC00"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="2dp">
            </View>



            <EditText
                android:id="@+id/Que"
                android:hint="Write your question.."
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <EditText
                android:id="@+id/Ans"
                android:hint="Write your answer.."
                android:layout_marginTop="15dp"
                android:inputType="textMultiLine"
            android:lines="8"
                android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnAdd"
                android:background="@color/colorPrimary"
                android:text="ADD Question"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="if your answer is genuine and proper ,than we add in our application soon."
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textAlignment="center"
                />

        </LinearLayout>


    </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
